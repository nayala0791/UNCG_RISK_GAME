<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GameActivity"
    android:background="#22B14C">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1,2,3,4,5,6"
        android:background="#22B14C">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Row0"
            android:layout_gravity="top">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:id="@+id/AttPetty"
                android:layout_column="0"
                android:text="Attack"
                android:textSize="10dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/team1"
                android:layout_row="0"
                android:layout_column="1"
                android:textStyle="bold" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttEUC"
                android:layout_column="2"
                android:textSize="10dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dice"
                android:layout_row="0"
                android:layout_column="3"
                android:textStyle="bold" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttMoss"
                android:layout_column="4"
                android:textSize="10dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/team2"
                android:layout_row="0"
                android:layout_column="5"
                android:textStyle="bold" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="10dp"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttBryan"
                android:layout_column="6"
                android:textSize="10dp"
                android:layout_gravity="top"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Row1"
            android:background="#ff159e1a">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PettyButtonR1C0"
                android:layout_row="1"
                android:layout_column="0"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/petty_neutral" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR1C1"
                android:layout_row="1"
                android:layout_column="1"
                android:scaleType="fitXY"
                android:src="@drawable/bridge_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EUCR1C2"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/euc_neutral" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR1C3"
                android:src="@drawable/bridge_horizontal"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mossmanR1C4"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/mossman_neutral" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR1C5"
                android:src="@drawable/bridge_horizontal"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BryanR1C6"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/bryan_neutral" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Row2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR2C0"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/bridge_vertical"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blankR2C1"
                android:layout_row="2"
                android:layout_column="1"
                android:src="@drawable/tree"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR2C2"
                android:src="@drawable/bridge_vertical"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:id="@+id/endturn"
                android:layout_column="3"
                android:height="100dp"
                android:background="#bb980b"
                android:text="RETREAT \n(END TURN)" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR2C4"
                android:layout_column="4"
                android:src="@drawable/bridge_vertical"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/blankR2C5"
                android:layout_column="5"
                android:src="@drawable/tree"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR2C6"
                android:layout_column="6"
                android:src="@drawable/bridge_vertical"
                android:scaleType="fitXY" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Row3"
            android:background="#ff159e1a">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FoustR3C0"
                android:layout_row="3"
                android:layout_column="0"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/foust_neutral" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR3C1"
                android:layout_column="1"
                android:src="@drawable/bridge_horizontal"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/curryR3C2"
                android:layout_column="2"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/curry_neutral" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR3C3"
                android:layout_column="3"
                android:src="@drawable/bridge_horizontal"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sullivanR3C4"
                android:layout_column="4"
                android:text="0"
                android:height="75dp"
                android:background="@drawable/sullivan_neutral" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/roadR3C5"
                android:layout_column="5"
                android:src="@drawable/bridge_horizontal"
                android:scaleType="fitXY" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jacksonR3C6"
                android:layout_column="6"
                android:text="0"
                android:shadowColor="#ffffffff"
                android:height="75dp"
                android:background="@drawable/jackson_neutral" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Row4">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttFoust"
                android:layout_column="0"
                android:textSize="10dp"
                android:visibility="invisible" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttCurry"
                android:layout_column="2"
                android:textSize="10dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn: "
                android:id="@+id/turn"
                android:layout_column="3"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:layout_gravity="center_horizontal" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttSull"
                android:layout_column="4"
                android:textSize="10dp"
                android:visibility="invisible" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="10dp"
                android:layout_height="34dp"
                android:text="Attack"
                android:id="@+id/AttJack"
                android:layout_column="6"
                android:textSize="10dp"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
