<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fc000000"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideOverlay"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:scrollbars="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:focusable="true">
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:rowCount="10"
            android:columnCount="1"
            android:layout_above="@+id/CreateButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="UNCG RISK"
                android:id="@+id/Title"
                android:textSize="100dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffd700"
                android:paddingTop="10dp"
                android:background="#fd000000"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Pictar"
                android:src="@drawable/a"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="25dp"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Enter Username"
                android:ems="10"
                android:id="@+id/UserInput"
                android:textSize="45dp"
                android:background="#ffffff"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Fluff"
                android:textSize="35dp"
                android:layout_column="0" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Create Game"
                android:id="@+id/CreateButton"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="#ff07159e"
                android:textColor="#ffd700"
                android:onClick="createGame"
                android:layout_above="@+id/FindButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Fluffagainagain"
                android:textSize="35dp"
                android:layout_column="0" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Find Game"
                android:id="@+id/FindButton"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="#ff07159e"
                android:textColor="#ffd700"
                android:onClick="findGame"
                android:layout_alignBottom="@+id/scrollView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Fluffagain"
                android:textSize="35dp"
                android:layout_column="0" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:id="@+id/exitButton"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="#ff07159e"
                android:textColor="#ffd700"
                android:layout_above="@+id/FindButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </GridLayout>
    </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>
